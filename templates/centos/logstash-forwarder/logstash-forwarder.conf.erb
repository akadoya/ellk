{
  "network": {
    "servers": [ "localhost:5043" ],
    "ssl key": "./logstash-forwarder.key",
    "ssl ca": "./logstash-forwarder.crt",
    "timeout": 15
  },
  "files": [
    {
      "paths": [
        "/var/log/messages",
        "/var/log/*.log"
      ],

      "fields": { "type": "syslog" }
    }
  ]
}
