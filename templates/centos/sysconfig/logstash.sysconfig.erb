###############################
# Default settings for logstash
###############################

# Override Java location
JAVACMD=<%= @options['javacmd'] %>

# Set a home directory
LS_HOME=<%= @options['ls_home'] %>

# Arguments to pass to logstash agent
LS_OPTS=<%= @options['ls_opts'] %>

# Arguments to pass to java
LS_HEAP_SIZE=<%= @options['ls_heap_size'] %>
LS_JAVA_OPTS=<%= @options['ls_java_opts'] %>

# pidfiles aren't used for upstart; this is for sysv users.
LS_PIDFILE=<%= @options['ls_pidfile'] %>

# user id to be invoked as; for upstart: edit /etc/init/logstash.conf
LS_USER=<%= @options['ls_user'] %>

# logstash logging
LS_LOG_FILE=<%= @options['ls_log_file'] %>
LS_USE_GC_LOGGING=<%= @options['ls_use_gc_logging'] %>

# logstash configuration directory
LS_CONF_DIR=<%= @options['ls_conf_dir'] %>

# Open file limit; cannot be overridden in upstart
LS_OPEN_FILES=<%= @options['ls_open_files'] %>

# Nice level
LS_NICE=<%= @options['ls_nice'] %>
